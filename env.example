# Required Environment Variables for Travel Insurance Inquiry Processor

# Flask Configuration
SESSION_SECRET=your_super_secret_session_key_here_change_this

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/your_database_name
# For development, you can use SQLite (optional): DATABASE_URL=sqlite:///dev_database.db

# OpenAI API Configuration (required for email processing)
OPEN_API_KEY=your_openai_api_key_here

# Microsoft 365 / Graph API Configuration (required for email polling)
MS365_CLIENT_ID=your_azure_app_client_id
MS365_CLIENT_SECRET=your_azure_app_client_secret
MS365_TENANT_ID=your_azure_tenant_id
MS365_TARGET_EMAIL=email@domain.com

# Admin User Configuration (optional - for creating initial admin user)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@yourdomain.com

# Redis Configuration (optional - defaults to localhost)
REDIS_URL=redis://localhost:6379/0

# Polling Configuration (optional - defaults to 120 seconds)
POLL_INTERVAL_SECONDS=120

# WhatsApp API Configuration (optional)
WAAPI_API_TOKEN=your_waapi_token
WAAPI_INSTANCE_ID=your_waapi_instance_id
WAAPI_WEBHOOK_SECRET=your_waapi_webhook_secret 